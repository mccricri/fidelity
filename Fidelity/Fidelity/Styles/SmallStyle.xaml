<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Fidelity.SmallStyle">

    <Style x:Key="BarCodeLabelStyle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="Large"></Setter>
        <Setter Property="Rotation" Value="90"></Setter>
        <Setter Property="TranslationX" Value="-140"></Setter>
        <Setter Property="TranslationY" Value="330"></Setter>
    </Style>

    <Style x:Key="BarCodeStyle" TargetType="Image">
        <Setter Property="Rotation" Value="90"></Setter>
        <Setter Property="TranslationX" Value="0"></Setter>
        <Setter Property="TranslationY" Value="80"></Setter>
        <Setter Property="Scale" Value="1.1"></Setter>
    </Style>

</ResourceDictionary>